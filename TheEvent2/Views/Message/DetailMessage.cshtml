@model TheEvent.DAL.Entities.Message

@{
    ViewData["Title"] = "DetailMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Mesaj Detayı </h3>
    </div>

    <div class="card">
        <div class="card-body">
            <p><strong>Ad Soyad:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Konu:</strong> @Model.Subject</p>
            <p><strong>Tarih:</strong> @Model.SendDate.ToString("dd.MM.yyyy HH:mm")</p>
            <hr />
            <p><strong>Mesaj:</strong></p>
            <p>@Model.Description</p>
        </div>
    </div>
</div>
