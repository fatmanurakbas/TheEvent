@model TheEvent.DAL.Entities.NavbarViewModel

<nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

    <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-end">
        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-menu"></span>
        </button>

        <!-- Logo alanı -->
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start px-3">
            <a class="navbar-brand brand-logo" href="/">
                <img src="/PurpleAdmin-Free-Admin-Template-1.0.0/assets/images/faces/navbarlogo4.jpg" alt="logo" style="height: 40px;">
            </a>
        </div>

        <!-- Search alanı -->
        <div class="search-field d-none d-md-block">
            <form class="d-flex align-items-center h-100" action="#">
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <i class="input-group-text border-0 mdi mdi-magnify"></i>
                    </div>
                    <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
                </div>
            </form>
        </div>

        <!-- Mesajlar -->
        <ul class="navbar-nav navbar-nav-right">
            <li class="nav-item dropdown">
                <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="mdi mdi-email-outline"></i>
                    @if (Model.UnreadMessageCount > 0)
                    {
                        <span class="count-symbol bg-warning"></span>
                    }
                </a>
                <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                    <h6 class="p-3 mb-0">Yeni Mesajlar</h6>
                    <div class="dropdown-divider"></div>
                    @foreach (var message in Model.UnreadMessages)
                    {
                        <a class="dropdown-item preview-item">
                            <div class="preview-thumbnail">
                                <img src="/PurpleAdmin-Free-Admin-Template-1.0.0/assets/images/faces/message.jpg" alt="image" class="profile-pic">
                            </div>
                            <div class="preview-item-content d-flex flex-column">
                                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@message.Name</h6>
                                <p class="text-gray mb-0">@message.Subject</p>
                                <p class="text-gray mb-0 small">@message.SendDate.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </a>
                        <div class="dropdown-divider"></div>
                    }
                    <h6 class="p-3 mb-0 text-center">Tüm Mesajları Gör</h6>
                </div>
            </li>

            <!-- Bildirimler -->
            <li class="nav-item dropdown">
                <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="mdi mdi-bell-outline"></i>
                    @if (Model.UnreadNotificationCount > 0)
                    {
                        <span class="count-symbol bg-danger"></span>
                    }
                </a>
                <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                    <h6 class="p-3 mb-0">Bildirimler</h6>
                    <div class="dropdown-divider"></div>
                    @foreach (var notification in Model.Notifications)
                    {
                        <a class="dropdown-item preview-item">
                            <div class="preview-thumbnail">
                                <img src="/PurpleAdmin-Free-Admin-Template-1.0.0/assets/images/faces/bildirim.png" alt="image" class="profile-pic">

                            </div>
                            <div class="preview-item-content d-flex flex-column">
                                <h6 class="preview-subject font-weight-normal mb-1">@notification.Title</h6>
                                <p class="text-gray ellipsis mb-0 small">@notification.Time.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </a>
                        <div class="dropdown-divider"></div>
                    }
                    <h6 class="p-3 mb-0 text-center">Tüm Bildirimleri Gör</h6>
                </div>
            </li>
            <!-- Çıkış Butonu (Hızlı) -->
            <li class="nav-item nav-logout d-none d-lg-block">
                <a class="nav-link" href="/Login/index" title="Çıkış Yap">
                    <i class="mdi mdi-power"></i>
                </a>
            </li>
            <li class="nav-item d-none d-lg-block full-screen-link">
                <a class="nav-link">
                    <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                </a>
            </li>
            <li class="nav-item nav-settings d-none d-lg-block">
                <a class="nav-link" href="#">
                    <i class="mdi mdi-format-line-spacing"></i>
                </a>
            </li>
            <!-- Profil -->
            <li class="nav-item nav-profile dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                    <div class="nav-profile-img me-2">
                        <img src="/PurpleAdmin-Free-Admin-Template-1.0.0/assets/images/ben.jpg" alt="profile" style="width: 36px; height: 36px; border-radius: 50%;" />
                    </div>
                    <span class="text-black fw-semibold">Fatma Nur AKBAŞ</span>
                </a>
                <div class="dropdown-menu dropdown-menu-end navbar-dropdown" aria-labelledby="profileDropdown">
                    <a class="dropdown-item" href="/Account/ActivityLog">
                        <i class="mdi mdi-cached me-2 text-success"></i> Etkinlik Günlüğü
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/Login/index">
                        <i class="mdi mdi-logout me-2 text-primary"></i> Çıkış
                    </a>
                </div>
            </li>

        </ul>
    </div>
</nav>
