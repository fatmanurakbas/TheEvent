@model List<TheEvent.DAL.Entities.Venue>

<section id="venue" class="venue section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Event Venue<br></h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div><!-- End Section Title -->

    <div class="container-fluid" data-aos="fade-up">

        <div class="row g-0">
            <div class="col-lg-6 venue-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" style="border:0" allowfullscreen=""></iframe>
            </div>

            <div class="col-lg-6 venue-info">
                <div class="row justify-content-center">
                  @foreach (var venue in Model)
                  {
                    <div class="col-11 col-lg-8 position-relative">
                        <h3>@venue.Title</h3>
                        <p>@venue.Description</p>
                    </div>
                  }
                </div>
            </div>
        </div>

    </div>

    <div class="container-fluid venue-gallery-container" data-aos="fade-up" data-aos-delay="100">
        <div class="row g-0">
            @* Her venue'nin 1 görseli varsa: *@
            @foreach (var venue in Model)
            {
                <div class="col-lg-3 col-md-4">
                    <div class="venue-gallery">
                        <a href="@venue.ImageUrl" class="glightbox" data-gall="venue-gallery">
                            <img src="@venue.ImageUrl" alt="@venue.Title" class="img-fluid">
                        </a>
                    </div>
                </div>
            }

            @* Eğer ImageUrl içinde çoklu görsel (örneğin: url1;url2;url3) varsa: *@
            @* 
            @foreach (var venue in Model)
            {
                if (!string.IsNullOrEmpty(venue.ImageUrl))
                {
                    foreach (var image in venue.ImageUrl.Split(';'))
                    {
                        <div class="col-lg-3 col-md-4">
                            <div class="venue-gallery">
                                <a href="@image" class="glightbox" data-gall="venue-gallery">
                                    <img src="@image" alt="" class="img-fluid">
                                </a>
                            </div>
                        </div>
                    }
                }
            }
            *@
        </div>
    </div>

</section>



   

