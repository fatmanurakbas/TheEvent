@model List<TheEvent.DAL.Entities.Question>

<section id="faq" class="faq section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>
            Sık Sorulanlar, Net Yanıtlar
        </h2>
        <p>Konferansla ilgili en sık sorulan soruları sizler için derledik. Katılım, kayıt, program ve daha fazlasına dair tüm merak ettiklerinizi aşağıda bulabilirsiniz.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-lg-10" data-aos="fade-up" data-aos-delay="100">

                <div class="faq-container">
                    @foreach (var item in Model)
                    {
                        <div class="faq-item faq-active">
                            <h3>@item.Title</h3>
                            <div class="faq-content">
                                <p>@item.Description</p>
                            </div>
                            <i class="faq-toggle bi bi-chevron-right"></i>
                        </div><!-- End Faq item-->
                    }

                </div>

            </div><!-- End Faq Column-->

        </div>

    </div>

</section>