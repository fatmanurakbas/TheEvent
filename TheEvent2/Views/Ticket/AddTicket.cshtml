@model TheEvent.DAL.Entities.Ticket

@{
    ViewData["Title"] = "AddTicket";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> İletişim Ekleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Ekleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adres</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <label>Başlık</label>
                        <input asp-for="Title" class="form-control" />
                        <br />

                        <label>Ücret</label>
                        <input asp-for="Price" class="form-control" />
                        <br />

                        <label>Özellik</label>
                        <input asp-for="Status" class="form-control" />
                        <br />
                        <div class="form-group">
                            <label for="Status">Paket Türü:</label>
                            <select asp-for="Status" class="form-control" id="statusSelect">
                                <option value="">-- Seçiniz --</option>
                                <option value="Standart">Standart</option>
                                <option value="Premium">Premium</option>
                                <option value="Pro">Pro</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label><input type="checkbox" asp-for="Feature1" /> Ücretsiz İçecek</label>
                        </div>

                        <div class="form-group">
                            <label><input type="checkbox" asp-for="Feature2" /> VIP Giriş</label>
                        </div>

                        <div class="form-group">
                            <label><input type="checkbox" asp-for="Feature3" />Ön Sıra Koltuk</label>
                        </div>

                        <label>Açıklama</label>
                        <input asp-for="Description" class="form-control" />
                        <br />

                        <button class="btn btn-primary">
                            <i class="fa fa-save"></i> Kaydet
                        </button>
                        <a href="/Contact/Index" class="btn btn-light">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>