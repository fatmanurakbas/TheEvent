@model TheEvent.DAL.Entities.About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Hakkımızda Güncelleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Güncelleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Hakkımızda</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="AboutId" />

                        <label>Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <br />

                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <br />

                        <label>Adres</label>
                        <input type="text" asp-for="Adres" class="form-control" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                        <br />

                        <label>Zaman</label>
                        <input type="text" asp-for="Time" class="form-control" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                        <br />

                        <label>Mevcut Görsel</label><br />
                        <img src="@Model.ImageUrl" style="height:75px;width:75px" />
                        <br /><br />

                        <label>Yeni Görsel Seç (Opsiyonel)</label>
                        <input type="file" asp-for="ImageFile" class="form-control" />
                        <br />

                        <input type="hidden" asp-for="ImageUrl" />

                        <button class="btn btn-primary">
                            <i class="fa fa-save"></i> Güncelle
                        </button>
                        <a href="/About/Index" class="btn btn-light">İptal</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
