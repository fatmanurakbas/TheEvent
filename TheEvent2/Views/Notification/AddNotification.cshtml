@model TheEvent.DAL.Entities.Notification

@{
    ViewData["Title"] = "AddNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content-wrapper">
    <h3 class="page-title"> Bildirim Ekle </h3>

    <form method="post">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" />
        <br />

        <label>İkon (örnek: fa fa-check)</label>
        <input asp-for="Icon" class="form-control" />
        <br />

        <label>İkon Rengi (örnek: text-success)</label>
        <input asp-for="Iconcolor" class="form-control" />
        <br />

        <button class="btn btn-primary">Kaydet</button>
        <a href="/Notification/Index" class="btn btn-light">İptal</a>

    </form>
</div>
