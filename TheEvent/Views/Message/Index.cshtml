@model List<TheEvent.DAL.Entities.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;

}

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: none;
    }

    .table thead {
        background-color: #f7f7f7;
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #ddd;
    }

    .table td, .table th {
        vertical-align: middle !important;
    }

    .btn-update {
        background-color: #e6f0ff;
        color: #007bff;
        border: 1px solid #cce0ff;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-update:hover {
            background-color: #d4e8ff;
        }

    .btn-delete {
        background-color: #ffe6e6;
        color: #dc3545;
        border: 1px solid #f5b4b4;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-delete:hover {
            background-color: #ffdddd;
        }

    .badge-new {
        background-color: #ffc107;
        color: #fff;
        border-radius: 5px;
        padding: 2px 8px;
        font-size: 0.75rem;
    }
</style>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> 📥 Gelen Kutusu </h3>
        <a href="/Message/AddMessage" class="btn btn-gradient-success">
            <i class="fa fa-plus-circle"></i> ➕ Yeni Mesaj Gönder
        </a>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">📋 Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Mesaj</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#️⃣</th>
                                <th>👤 Ad Soyad</th>
                                <th>✉️ Email</th>
                                <th>📄 Konu</th>
                                <th>🔖 Açıklama</th>
                                <th>✔️ Okundu bilgisi</th>
                                <th>🕒 Zaman</th>
                                <th>🔔 Durum</th>
                                <th>⚙️ İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr class="@(item.IsRead ? "" : "table-warning")">
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Description</td>
                                    <td>@item.IsRead</td>

                                    <td>@item.SendDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (item.IsRead)
                                        {
                                            <span class="text-success">✔️ Okundu</span>
                                        }
                                        else
                                        {
                                            <span class="badge-new">Yeni</span>
                                        }
                                    </td>
                                   

                                    <td>
                                        <a href="/Message/DetailMessage/@item.MessageId" class="btn btn-update">
                                            📄 Detay
                                        </a>
                                        <a onclick="deleteMessage(@item.MessageId)" class="btn btn-delete">
                                            🗑️ Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function deleteMessage(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlem geri alınamaz!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Message/DeleteMessage/" + id;
            }
        });
    }
</script>
