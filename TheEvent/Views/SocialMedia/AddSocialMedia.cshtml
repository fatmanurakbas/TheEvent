@model TheEvent.DAL.Entities.SocialMedia

@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Yeni Sosyal Medya Hesabı Ekle </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/SocialMedia/Index">Sosyal Medya</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ekle</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post">

                        <div class="form-group">
                            <label>Platform Adı</label>
                            <input asp-for="Title" class="form-control" placeholder="Örn: Instagram" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Bağlantı URL</label>
                            <input asp-for="Url" class="form-control" placeholder="https://instagram.com/kullanici" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>İkon</label>
                            <input asp-for="Icon" class="form-control" placeholder="Örn: Instagram" />
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Kaydet
                        </button>
                        <a href="/SocialMedia/Index" class="btn btn-light">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
