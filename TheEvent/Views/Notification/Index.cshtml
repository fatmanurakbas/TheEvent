@model List<TheEvent.DAL.Entities.Notification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;

}


<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: none;
    }

    .table thead {
        background-color: #f7f7f7;
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #ddd;
    }

    .table td, .table th {
        vertical-align: middle !important;
    }

    .btn-action {
        border-radius: 10px;
        padding: 6px 12px;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-read {
        background-color: #e6f0ff;
        color: #007bff;
        border: 1px solid #cce0ff;
    }

        .btn-read:hover {
            background-color: #d4e8ff;
        }

    .btn-unread {
        background-color: #fff4e6;
        color: #ff9800;
        border: 1px solid #ffe0b2;
    }

        .btn-unread:hover {
            background-color: #ffe0b2;
        }

    .btn-delete {
        background-color: #ffe6e6;
        color: #dc3545;
        border: 1px solid #f5b4b4;
    }

        .btn-delete:hover {
            background-color: #ffdddd;
        }

    .icon-large {
        font-size: 1.5rem;
    }
</style>

<div class="content-wrapper">

    <div class="page-header">
        <h3 class="page-title"> 🔔 Bildirim Kutusu </h3>
        <a href="/Notification/AddNotification" class="btn btn-gradient-success">
            <i class="fa fa-plus-circle"></i> ➕ Yeni Bildirim
        </a>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">📋 Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Bildirim</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#️⃣</th>
                                <th>🔔 İkon</th>
                                <th>📝 Başlık</th>
                                <th>📅 Zaman</th>
                                <th>📌 Durum</th>
                                <th>⚙️ İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr class="@(item.IsRead == "false" ? "table-warning" : "")">
                                    <td>@count</td>
                                    <td><i class="@item.Icon icon-large @item.Iconcolor"></i></td>
                                    <td>@item.Title</td>
                                    <td>@item.Time.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (item.IsRead == "true")
                                        {
                                            <span class="text-success">✔️ Okundu</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Yeni</span>
                                        }
                                    </td>
                                    <td class="d-flex gap-2">
                                        @if (item.IsRead == "false")
                                        {
                                            <a href="/Notification/MakeRead/@item.NotificationId" class="btn btn-read">
                                                👁️‍🗨️ Okundu
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Notification/MakeUnread/@item.NotificationId" class="btn btn-unread">
                                                🔄 Yeniden Oku
                                            </a>
                                        }
                                        <a onclick="deleteNotification(@item.NotificationId)" class="btn btn-delete">
                                            🗑️ Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function deleteNotification(id) {
        Swal.fire({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Notification/DeleteNotification/" + id;
            }
        });
    }
</script>
